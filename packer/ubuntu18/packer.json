{
  "builders": [{
    "tags": {
      "ManagedBy": "Packer",
      "Project": "gpas-cloud-burst"
    },
    "run_volume_tags": {
      "ManagedBy": "Packer",
      "Project": "gpas-cloud-burst"
    },
    "snapshot_tags": {
      "ManagedBy": "Packer",
      "Project": "gpas-cloud-burst"
    },
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-07ebfd5b3428b6f4d",
    "instance_type": "t3.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-gpas-ubuntu18_{{isotime | clean_resource_name}}",
    "subnet_id": "subnet-0dc5a5bc9b0033a6b",
    "vpc_id": "vpc-099487604cf3c0881",
    "associate_public_ip_address": false,
    "ebs_optimized": true,
    "ena_support": true,
    "temporary_security_group_source_cidrs": [
      "172.29.96.0/20",
      "10.64.0.0/18",
      "172.21.0.0/18"
    ]
  }],
  "provisioners": [
    {
      "type":  "shell",
      "expect_disconnect": true,
      "inline": [
        "set -x",
        "/sbin/modinfo ena",

        "sudo -E /usr/bin/apt-get -y update",
        "sudo -E /usr/bin/apt-mark hold grub-pc",
        "sudo -E /usr/bin/apt-get -y upgrade",

        "sudo /sbin/reboot"
      ]
    },
    {
      "pause_before": "40s",
      "type": "chef-solo",
      "cookbook_paths": ["../cookbooks"],
      "run_list": ["ec2-slurm-worker"],
      "chef_license": "accept-silent"
    },
    {
    "type": "shell",
    "execute_command": "sudo sh {{.Path}}",
    "scripts": [
      "files/cleanup.sh"
    ]
    }
  ]
}
